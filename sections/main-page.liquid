
{{ 'application.css' | asset_url | stylesheet_tag }}
{{'stylesheet-page.css' | asset_url | stylesheet_tag}}
{{'custom-fonts.css' | asset_url | stylesheet_tag}}

{{'button_transitions.js' | asset_url | preload_tag: as: 'script', type: 'text/javascript'}}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  <h1 class="main-page-title title-typography word-wrap page-title">
    {{ page.title | escape }}
  </h1>
  <div class="main-page-content rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {{ page.content }}
  </div>
</div>

<div class="button-holder">
    <div onclick="openFeaturedProduct()" class="button-subscribe button-typography button-color scroll-down">Subscribe</div>
</div>

<script>

  function openFeaturedProduct(){
    document.getElementById('shopify-section--template--23514582122831__featured-product').style.display= "block";
    var element = document.querySelector("#shopify-section--template--23514582122831__featured-product");
    element.scrollIntoView();
  }

</script>

{% schema %}
{
  "name": "page title-description",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Page title"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "padding bottom",
      "default": 36
    }
  ]
}
{% endschema %}