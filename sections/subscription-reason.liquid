{{'new_section.css' | asset_url | stylesheet_tag}}
{{'button_transitions.js' | asset_url | preload_tag: as: 'script', type: 'text/javascript'}}

  <section>
  <div class="section-container">
      <div class="section-title title-typography">
          {{ section.settings.section_title}}
      </div>
      <div class="container">         
          <fieldset class="box">
            <legend class="number" id="box-1">1</legend>
              <div class="text"> {{ shop.metafields.custom.why_subscribe_reason3 }}</div>
          </fieldset>

          <fieldset class="box">
              <legend class="number" id="box-2">2</legend>
                <div class="text"> {{  shop.metafields.custom.why_subscribe_reason2 }}</div>
            </fieldset>

            <fieldset class="box">
              <legend class="number" id="box-3">3</legend>
                <div class="text word-wrap"> {{  shop.metafields.custom.why_subscribe_reason1 }}</div>
            </fieldset>
        </div>

      <div class="button-holder button-margin">
          <div onclick="openFeaturedProduct()" class="button-subscribe button-typography button-color scroll-down">Subscribe</div>
      </div>
  </div> 

</section>
  

  {% comment %} Schema {% endcomment %}

{% schema %}
  {
    
  "name": "Subscription reasons",
      "tag": "section",
      "class": "section",
    "settings": [
      {
        "type": "textarea",
        "id": "section_title",
        "label": "Section title",
        "default": "Why Subscribe?"
      },
      {
        "type": "text",
        "id": "box_1_content",
        "label": "Box 1 Content",
        "default": "hello"
      },
      {
        "type": "text",
        "id": "box_2_content",
        "label": "Box 2 Content",
        "default": "hello"
      },
      {
        "type": "text",
        "id": "box_3_content",
        "label": "Box 3 Content",
        "default": "hello"
      }
    ],
    "presets": [ ]
   
  }
  {% endschema %}


